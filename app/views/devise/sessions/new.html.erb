<div class="row create-content">
  <div class="col-lg-4 col-lg-offset-4 col-sm-10 col-sm-offset-1">
    <%= simple_form_for(@user, :url => session_path(@user), html: { class: 'create-content' }) do |f| %>
      <h2>Logga in</h2>
      <%= f.input :email, placeholder: "Email", label: false, class: "sr-only"%>
      <%= f.input :password, placeholder: "Lösenord", label: false%>
      <%= f.check_box :remember_me %>
      <%= f.label "Kom ihåg mig" %>
      <%= f.button :submit, "Logga in", class: 'btn btn-lg btn-primary btn-block' %>
      <br>
      <%= render "devise/shared/links" %>
      <br>
    <% end %>
  </div>
</div>

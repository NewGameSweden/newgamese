<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Glömt lösenord?", new_password_path(resource_name) %><br />
<% end -%>

<%- if controller_name != 'sessions' %>
	<hr />
	<h2>Redan medlem?</h2>
  <%= submit_tag "Logga in", :type => 'button', :class => 'btn btn-lg btn-block', :onclick => "location.href = '/users/sign_in'"%><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<hr />
	<h2>Inte medlem?</h2>
  <%= submit_tag "Registrera", :type => 'button', :class => 'btn btn-lg btn-block', :onclick => "location.href = '/users/sign_up'"%><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Fick inget bekräftelse mail?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Fick inget unlock mail?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Logga in med #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>

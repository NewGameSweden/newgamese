<div class="create-content">
  <div class="col-xs-6 col-xs-offset-3">
    <%= simple_form_for(@event, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :last_reserv_date, label_html: { class: 'datepicker' } %>
      <%= f.input :start_at, label_html: { class: 'datepicker' }%>
      <%= f.input :end_at, label_html: { class: 'datepicker' } %>
      <%= f.input :location %>
      <%= f.input :price %>
      <%= f.file_field :image %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
